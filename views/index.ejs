<%- include ('./partiels/header.ejs') %>
<body>
    <%- include ('./partiels/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <a class="btn btn-outline-primary" href="/perguntar">Perguntar</a>
        <hr>
        <% perguntas.forEach(perguntas => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= perguntas.titulo %></p>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= perguntas.id %>"><button class="btn btn-primary">Responder</button></a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('./partiels/footer.ejs') %>